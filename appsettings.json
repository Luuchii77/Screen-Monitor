{
  "AppMode": "Personal",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "ConnectionStrings": {
    "SQLite": "Data Source={DatabasePath};Version=3;Pooling=true;"
  },
  "Paths": {
    "DatabasePath": "./data/screentime_monitor.db",
    "LogDirectory": "./logs",
    "DataDirectory": "./data"
  },
  "UISettings": {
    "ServicePipeName": "ScreenTimeMonitor.Pipe",
    "ConnectionTimeoutMs": 5000,
    "RefreshIntervalSeconds": 2,
    "StartWithWindows": false,
    "MinimizeToTray": true
  },
  "MonitoringSettings": {
    "ProcessScanIntervalMs": 3000,
    "MetricsPollingIntervalSeconds": 5,
    "BatchSize": 100,
    "MaxQueueSize": 1000,
    "DatabaseFlushIntervalSeconds": 30,
    "DataRetentionDays": 90
  },
  "Service": {
    "ServiceName": "ScreenTimeMonitor",
    "DisplayName": "Screen Time Monitor Service",
    "Description": "Monitors application usage and system metrics"
  }
}
