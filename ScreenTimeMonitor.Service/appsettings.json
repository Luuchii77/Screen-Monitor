{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff"
    }
  },
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Username=postgres;Password=;Database=screentime_monitor;",
    "SQLite": "Data Source=./data/screentime_monitor.db;Version=3;Pooling=true;"
  },
  "MonitoringSettings": {
    "UsePostgreSQL": false,
    "MetricsPollingIntervalSeconds": 5,
    "BatchSize": 100,
    "MaxQueueSize": 1000,
    "DatabaseFlushIntervalSeconds": 30,
    "DataRetentionDays": 90,
    "WindowHookPollbackIntervalMs": 1000
  },
  "Service": {
    "ServiceName": "ScreenTimeMonitor",
    "DisplayName": "Screen Time Monitor Service",
    "Description": "Monitors application usage and system metrics"
  },
  "Paths": {
    "DataDirectory": "./data",
    "LogDirectory": "./logs",
    "DatabaseDirectory": "./data"
  }
}
